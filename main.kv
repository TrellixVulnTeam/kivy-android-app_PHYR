<MainLayout>:
    do_default_tab:False
    TabbedPanelItem:
        text: 'Kassabuch'
        BoxLayout:
            orientation:"vertical"
            BoxLayout:
                orientation:"vertical"
                BoxLayout:
                    orientation:"horizontal"
                    Label:
                        id:year_label
                        text:'Jahr'
                        size_hint_x: 20
                    Spinner:
                        id: year_Spinner
                        text:    root.kassabuch_year_spinner_default_value()      #default value showed
                        values:  root.kassabuch_year_spinner_values()      #list of values to show
                        on_text: root.kassabuch_year_select(self.text)
                        size_hint_x: 20
                BoxLayout:
                    orientation:"horizontal"
                    Button:
                        id:get_haus
                        text: "GET Categories"
                        size_hint_x: 20
                        on_press: root.kassabuch_get_categories_on_click()
                    Spinner:
                        id: category_Spinner
                        text: ''                   #default value showed
                        values: root.kassabuch_category_Spinner_values()      #list of values to show
                        on_text:  root.kassabuch_category_spinner_select(self.text)
                        size_hint_x: 20
                        disabled: True
                BoxLayout:
                    orientation:"horizontal"
                    Button:
                        id:get_contacts
                        text: "GET Contacts"
                        size_hint_x: 20
                        disabled: True
                        on_press: root.kassabuch_get_contacts_on_click()
                    Spinner:
                        id: contacts_Spinner
                        text: ''                   #default value showed
                        values: root.kassabuch_contacts_spinner_values()      #list of values to show
                        on_text:  root.kassabuch_contacts_spinner_select(self.text)
                        size_hint_x: 20
                        disabled: True
                BoxLayout:
                    orientation:"horizontal"
                    Label:
                        id:fuer_button
                        text: "FÃ¼r"
                        size_hint_x: 20
                        disabled: False
                    Spinner:
                        id: fuer_spinner
                        text: ''                   #default value showed
                        values: root.kassabuch_fuer_spinner_values()      #list of values to show
                        on_text:  root.kassabuch_fuer_spinner_select(self.text)
                        size_hint_x: 20
                        disabled: False
                BoxLayout:
                    orientation:"horizontal"
                    Label:
                        id:date_label
                        text:'DATUM'
                        size_hint_x: 20
                        disabled: False
                    TextInput:
                        id:date
                        text:root.on_date_text()
                        on_text: root.on_text_date(self.text)
                        size_hint_x: 20
                        disabled: False
                        font_size:'10'

                BoxLayout:
                    orientation:"horizontal"
                    Label:
                        id:EA_label
                        text:'E/A'
                        size_hint_x: 20
                    Spinner:
                        id: EA_Spinner
                        text:    root.kassabuch_ea_spinner_default_value()      #default value showed
                        values:  root.kassabuch_ea_spinner_values()      #list of values to show
                        on_text: root.kassabuch_ea_select(self.text)
                        size_hint_x: 20
                BoxLayout:
                    orientation:"horizontal"
                    Label:
                        id:cost_label
                        text:'BETRAG'
                        size_hint_x: 20
                        disabled: False
                    TextInput:
                        id:cost_TextInput
                        text:'SFR 2.50'
                        size_hint_x: 20
                        disabled: False
                        font_size:'10'
                BoxLayout:
                    orientation:"horizontal"
                    Button:
                        id:preview
                        text: "PREV KASSABUCH"
                        disabled: False
                        on_press: root.kassabuch_prev_kassabuch_button_on_click()
                    Button:
                        id:preview
                        text: "PREVIEW ENTRY"
                        disabled: True
                        on_press: root.kassabuch_preview_entry_button_on_click()
                    Button:
                        id:cl
                        text: "CLEAR"
                        disabled: True
                        on_press: root.on_clear_click()
                    Button:
                        id:send
                        text: "SEND"
                        disabled: True
                        on_press: root.on_send_click()
            ScrollView:
                id: communication_scroll
                Label:
                    id:communicationScreen_Label
                    text:' '
                    size_hint: 1, None
                    height: self.texture_size[1]
                    halign:'left'
                    font_size:'30'
            ScrollView:
                id: data_scroll
                Label:
                    id:dataScreen_Label
                    text:' '
                    size_hint: 1, None
                    height: self.texture_size[1]
                    halign:'left'
                    font_size:'30'

    TabbedPanelItem:
        text: 'Rapportierung'
