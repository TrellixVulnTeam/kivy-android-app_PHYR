<MainLayout>:
    do_default_tab:False
    TabbedPanelItem:
        text: 'wash'
        BoxLayout:
            orientation:"vertical"
            BoxLayout:
                orientation:"vertical"
                BoxLayout:
                    orientation:"horizontal"
                    Label:
                        id:periode_label
                        text:'PERIODE'
                        size_hint_x: 20
                    Spinner:
                        id: periode_Spinner
                        text: ''                   #default value showed
                        values: root.periode_Spinner_values()      #list of values to show
                        on_text:  root.on_periode_select(self.text)
                        size_hint_x: 20
                BoxLayout:
                    orientation:"horizontal"
                    Button:
                        id:get_haus
                        text: "GET HAUS"
                        size_hint_x: 20
                        on_press: root.get_haus_click()
                    Spinner:
                        id: building_Spinner
                        text: ''                   #default value showed
                        values: root.building_Spinner_values()      #list of values to show
                        on_text:  root.on_building_select(self.text)
                        size_hint_x: 20
                        disabled: True
                BoxLayout:

                    orientation:"horizontal"
                    Button:
                        id:get_mieter
                        text: "GET MIETER"
                        size_hint_x: 20
                        on_press: root.get_mieter_click()
                    Spinner:
                        id: mieter_Spinner
                        text: ''                   #default value showed
                        values: root.get_spinner_mieter_values()      #list of values to show
                        on_text:  root.on_mieter_select(self.text)
                        size_hint_x: 20
                        disabled: True
                BoxLayout:
                    orientation:"horizontal"
                    Label:
                        id:date_label
                        text:'DATUM'
                        size_hint_x: 20
                        disabled: True
                    TextInput:
                        id:date
                        text:root.on_date_text()
                        on_text: root.on_text_date(self.text)
                        size_hint_x: 20
                        disabled: True
                BoxLayout:
                    orientation:"horizontal"
                    Label:
                        id:cost_label
                        text:'BETRAG'
                        size_hint_x: 20
                        disabled: True
                    TextInput:
                        id:cost_TextInput
                        text:'SFR 2.50'
                        size_hint_x: 20
                        disabled: True
                BoxLayout:
                    orientation:"horizontal"
                    Button:
                        id:preview
                        text: "PREVIEW"
                        disabled: True
                        on_press: root.on_preview_click()
                    Button:
                        id:cl
                        text: "CLEAR"
                        disabled: True
                        on_press: root.on_clear_click()
                    Button:
                        id:send
                        text: "SEND"
                        disabled: True
                        on_press: root.on_send_click()
            ScrollView:
                id: scroll
                Label:
                    id:communicationScreen_Label
                    text:''
                    size_hint: 1, None
                    height: self.texture_size[1]
                    halign:'left'
                    font_size:'30'
            ScrollView:
                id: scroll2
                Label:
                    id:dataScreen_Label
                    text:''
                    size_hint: 1, None
                    height: self.texture_size[1]
                    halign:'left'
                    font_size:'30'

    TabbedPanelItem:
        text: 'Rapportierung'
        BoxLayout:
            orientation: 'vertical'
            Camera:
                id: camera
                resolution: (640, 480)
                play: False
            ToggleButton:
                text: 'Play'
                on_press: camera.play = not camera.play
                size_hint_y: None
                height: '48dp'
            Button:
                text: 'Capture'
                size_hint_y: None
                height: '48dp'
                on_press: root.capture()

    TabbedPanelItem:
        text: 'Haustechnik'


<ErrorPopup@Popup>:
    message: message
    auto_dismiss: False
    title: "Error"
    size_hint: None, None
    width: grid.width + dp(25)
    height: grid.height + root.title_size + dp(48)

    GridLayout:
        id: grid
        size_hint: None, None
        size: self.minimum_size
        padding: [10, 5]
        cols: 1
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "bottom"
            size_hint: None, None
            height: message.height
            width: max(message.width, butt.width)
            Label:
                id: message
                size_hint: None, None
                size: self.texture_size
                padding: [10, 5]
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "bottom"
            size_hint: None, None
            height: butt.height
            width: max(message.width, butt.width)
            Button:
                id: butt
                text: 'Close'
                size_hint: None, None
                size: self.texture_size
                padding: [10, 5]
                on_release: root.dismiss()


